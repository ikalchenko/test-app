{% extends 'templates/base.twig' %}

{% block head %}
    <title>Вход</title>
{% endblock %}

{% block content %}
    <div class="col-md-6 offset-md-3">
        <div class="card">
            <div class="card-header">
                <h5>Вход</h5>
            </div>
            <div class="card-body">
                <form action="{{ path_for('login') }}" method="post">
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" class="form-control{{ errors.email ? ' is-invalid' : '' }}" name="email" id="email" value="{{ old.email }}">
                        {% if errors.email %}
                            <div class="invalid-feedback">
                                {{ errors.email | first }}
                            </div>
                        {% endif %}
                    </div>
                    <div class="form-group">
                        <label for="password">Пароль</label>
                        <input type="password" class="form-control{{ errors.password ? ' is-invalid' : '' }}" name="password" id="password">
                        {% if errors.password %}
                            <div class="invalid-feedback">
                                {{ errors.password | first }}
                            </div>
                        {% endif %}
                    </div>
                    <button type="submit" class="btn btn-primary">Вход</button>
                    {{ csrf.field | raw }}
                </form>
            </div>
        </div>
    </div>
{% endblock %}